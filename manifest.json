{
    "manifest_version": 2,
    "name": "Scrollbar Remover",
    "version": "1.1",
    "author": "Tim Wei√üenfels",

    "permissions": ["activeTab","menus"],

    "background": {
        "scripts": ["background.js"]
    },

    "page_action": {
        "default_title": "Remove scrollbar",
        "show_matches": ["<all_urls>"],
        "default_icon": {
            "19": "Toggle.svg",
            "38": "Toggle.svg"
        }
    },

    "commands": {
        "_execute_page_action": {}
    }
}
